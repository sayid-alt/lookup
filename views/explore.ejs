<%- include('./partial/header.ejs') %>

	<div class="container mx-auto gap-10  grid grid-cols-5 mt-[200px] ">
		<!-- category container -->

		<aside id="accordion-open"
			class="px-5 border-r border-r-gray-300 divide-y divide-slate-200 sticky overflow-scroll h-[600px] top-[200px]"
			data-accordion="open">
			<h2 id="accordion-open-heading-1">
				<button type="button"
					class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-500  "
					data-accordion-target="#accordion-open-body-1" aria-expanded="true"
					aria-controls="accordion-open-body-1">
					<span class="flex items-center">
						Country
					</span>
					<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true"
						xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							d="M9 5 5 1 1 5" />
					</svg>
				</button>
			</h2>
			<div id="accordion-open-body-1" class="hidden" aria-labelledby="accordion-open-heading-1">
				<div class="p-5">
					<% countries.forEach(country=> { %>
						<div class="mb-2 flex items-center gap-2">
							<input type="checkbox" value="<%=country %>">
							<label for="<%=country %>">
								<%=country %>
							</label>
						</div>
						<% }) %>
				</div>
			</div>
			<h2 id="accordion-open-heading-2">
				<button type="button"
					class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-500  "
					data-accordion-target="#accordion-open-body-2" aria-expanded="true"
					aria-controls="accordion-open-body-2">
					<span class="flex items-center">
						Age
					</span>
					<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true"
						xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							d="M9 5 5 1 1 5" />
					</svg>
				</button>
			</h2>
			<div id="accordion-open-body-2" class="hidden" aria-labelledby="accordion-open-heading-2">
				<div class="p-5">
					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value="<10">
						<label for="<10">
							< 10 </label>
					</div>

					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value="10-20">
						<label for="<10">
							10 - 20 </label>
					</div>

					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value="20-30">
						<label for="<10">
							20 - 30 </label>
					</div>

					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value=">50">
						<label for=">50">
							> 40 </label>
					</div>
				</div>
			</div>
			<h2 id="accordion-open-heading-3">
				<button type="button"
					class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-500  "
					data-accordion-target="#accordion-open-body-3" aria-expanded="true"
					aria-controls="accordion-open-body-3">
					<span class="flex items-center">
						Gender
					</span>
					<svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true"
						xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							d="M9 5 5 1 1 5" />
					</svg>
				</button>
			</h2>
			<div id="accordion-open-body-3" class="hidden" aria-labelledby="accordion-open-heading-3">
				<div class="p-5 ">
					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value="male">
						<label for="male">
							Male </label>
					</div>

					<div class="mb-2 flex items-center gap-2">
						<input type="checkbox" value="female">
						<label for="female">
							Female </label>
					</div>
				</div>
			</div>
		</aside>


		<!-- results container -->
		<div class="col-span-4 grid grid-cols-3 gap-y-5 gap-x-10 ">
			<!-- grid-col-item -->
			<% if (locals.data) { %>
				<% data.forEach(item=> { %>
					<div class="border p-5 rounded-md">
						<div class="flex justify-start gap-5 items-start">
							<div>
								<img src=<%=item.picture.large %> alt="photo" class="w-[150px] h-[100px] object-cover
								rounded-md">
							</div>
							<div>
								<h1 class="text-xl font-bold">
									<%=`${item.name.title}. ${item.name.first} ${item.name.last}` %>
								</h1>
								<p class="text-sm mt-2 max-w-[300px]">
									<%= `${item.location.street.name} ${item.location.street.number}, ${item.location.city},
										${item.location.state}, ${item.location.postcode}` %>
								</p>

							</div>

						</div>
						<form action="/explore" class="flex gap-5 justify-end items-end">
							<button
								class="flex relative group items-center text-xs mt-5 text-purple-700 duration-300 font-medium hover:text-purple-900 hover:translate-x-1"
								type="submit">
								<span>Know More</span>
								<svg class="duration-300 ease-in-out group-hover:translate-x-1"
									xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
									<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
										d="m10 17l5-5l-5-5" />
								</svg>
							</button>
						</form>
					</div>
					<% }) %>
						<% } else { %>
							<h1>Something wrong</h1>
							<% } %>
		</div>
	</div>

	<%- include('./partial/footer.ejs') %>